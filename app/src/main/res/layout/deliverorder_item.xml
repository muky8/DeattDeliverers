<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/relativelay2"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#F5F5F5">

        <TextView
            android:id="@+id/receiver_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/raleway_bold"
            android:text="Name"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/addressdeliver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/receiver_name"
            android:layout_alignLeft="@id/receiver_name"
            android:layout_marginTop="13dp"
            android:fontFamily="@font/raleway_medium"
            android:text="Address" />


        <ImageView
            android:id="@+id/phoneimg"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignLeft="@id/receiver_name"
            android:layout_marginLeft="266dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/phone" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phoneimg"
            android:layout_alignStart="@+id/phoneimg"
            android:layout_alignLeft="@+id/phoneimg"
            android:layout_marginLeft="-35dp"
            android:layout_marginTop="30dp"
            android:id="@+id/verifyorder"
            android:fontFamily="@font/raleway_bold"
            android:text="Verify Order"
            android:textColor="#FF4501"
            android:textSize="12sp" />


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:visibility="gone"
        android:id="@+id/relaytive3"
        android:background="#F5F5F5"
        android:layout_below="@id/relativelay2">


        <TextView
            android:id="@+id/emailaddresstxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/textcolor"
            android:fontFamily="@font/raleway_bold"
            android:text="Enter Email Address"
            android:textAlignment="center"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/edittextemail"
            android:layout_width="310dp"
            android:layout_height="45dp"
            android:background="@drawable/edittext_shadow"
            android:theme="@style/MyEditTextTheme"
            android:layout_below="@id/emailaddresstxt"
            android:layout_alignLeft="@+id/emailaddresstxt"
            android:layout_marginTop="11dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Or"
            android:fontFamily="@font/raleway_bold"
            android:id="@+id/textor"
            android:layout_marginTop="10dp"
            android:layout_centerInParent="true"
            android:layout_below="@id/edittextemail"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/raleway_bold"
            android:text="Scan by Barcode"
           android:id="@+id/textbarcode"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_centerInParent="true"
            android:layout_below="@id/textor"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="20dp"
            android:id="@+id/buttonrelative"
            android:layout_below="@id/textbarcode">




            <Button
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:id="@+id/buttondone"
                android:fontFamily="@font/raleway_bold"
                android:textAllCaps="false"
                android:text="Done"
                android:textColor="#ffffff"
                android:background="@drawable/rounded_btn"
                />

        </RelativeLayout>

    </RelativeLayout>







</RelativeLayout>